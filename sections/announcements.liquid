{% stylesheet %}
.announcement-bar {
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
{% endstylesheet %}

<p>
  {% if section.settings.message != blank %}
    {{ section.settings.message }}
  {% else %}
    Welcome to {{ shop.name }}
  {% endif %}
</p>

{% schema %}
{
  "name": "Announcement Bar",
  "limit": 1,
  "class": "announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message"
    }
  ]
}
{% endschema %}